import java.util.Scanner;
public class Task9 {
	public static void main(String [] args) {
		Scanner inputStr = new Scanner(System.in);
		String numberStr;
		String regexStr = "^?\\d+$";
		System.out.println("Введите количество членов ряда 1 + 1/2 + 1/3 + 1/4 + ...: ");
		numberStr = inputStr.nextLine();
		if(numberStr.matches(regexStr) == true) {
			double number = Double.parseDouble(numberStr);
			double result = 0;
			for(int i = 1; i <= number; i++) {
				result = result + (1.0 / number);
			}
			System.out.println("Сумма членов ряда: " + result);
		} else {
			System.out.println("Введенная количество некорректно!");
		}
		inputStr.close();
	}
}