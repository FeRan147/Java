public class Task2 {
 
    private static final String TEXT =
            "В тексте каждую букву заменить ее порядковым номером в алфавите.\n" +
            "При выводе в одной строке печатать текст с двумя пробелами между буквами,\n" +
            "в следующей строке внизу под каждой буквой печатать ее номер.";
 
    private static final String FORMAT = "%5s";
 
    private static void printSymbols(final String line) {
        for (char symbol : line.toCharArray()) {
            System.out.printf(FORMAT, symbol);
        }
        System.out.println();
    }
 
    private static void printSymbolNumbers(final String line) {
        for (char symbol : line.toCharArray()) {
            System.out.printf(FORMAT, (int)symbol);
        }
        System.out.println();
    }
 
 
    public static void main(String[] args) {
        final String[] lines = TEXT.split("\\n");
        for (final String line : lines) {
            printSymbols(line);
            printSymbolNumbers(line);
        }
    }
 
}